<h2>Perfect work out for you</h2>
{{#each recs}}

  <div class="recommendation">
    <a href="/recommendation/{{this._id}}"><p>{{this.workoutName}}</p> </a>
    <p>Equipment: {{this.equipment}}</p>
    <p>Duration: {{this.duration}} minutes</p>
    <p>Level: {{this.level}}</p>
    <p>Intensity: {{this.reps}} reps</p>
    <p>{{this.rounds}} rounds</p>
    <p>Tags: {{this.tags}}</p>
  </div>

{{/each}}
{{#if coach}}
    <button onclick="window.location.href='/recommendation/add'">Add a recommendation</button>
{{/if}}
{{!--

login form handlebar template

--}}
<h1 class="center">
    {{title}}
</h1>
<p>{{error}}</p>

<main>
    <form action="/login" method="POST" id="login-form" class="center">
        <label for="emailAddressInput">Email:</label>
        <input id="emailAddressInput" type="email" name="emailAddressInput" placeholder="example@example.com"/>
        <label for="passwordInput">Password:</label>
        <input id="passwordInput" type="password" name="passwordInput" placeholder="MyPassword123!"/>
        <label for="button">Click here to Log in</label>
        <input id='button' type="submit"/>
    </form>
    <a href="/register" class="center">Click here to register!</a> 
    <br>
    <div id="error" class="error" hidden>I'm an error. I will change through Client-Side JS</div>
</main>
 <script src="/public/js/login.js"></script>